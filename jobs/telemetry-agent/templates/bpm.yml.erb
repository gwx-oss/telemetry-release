processes:
  - name: telemetry-agent
    unrestricted_volumes:
    - path: /var/vcap/sys/log
      writable: true
      mount_only: true
    additional_volumes:
    - path: /var/vcap/data/telemetry-agent/db-state
      writable: true
    executable: /var/vcap/packages/fluent-bit/bin/fluent-bit
    args:
    - --config=/var/vcap/jobs/telemetry-agent/config/fluent.cnf
