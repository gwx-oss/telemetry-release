#!/bin/bash

RUN_DIR=/var/vcap/sys/run/telemetry-centralizer
LOG_DIR=/var/vcap/sys/log/telemetry-centralizer
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    source /var/vcap/packages/ruby-2.4-r5/bosh/runtime.env
    source /var/vcap/packages/fluentd/bosh/runtime.env

    exec fluentd \
      --config=/var/vcap/jobs/telemetry-centralizer/config/fluent.cnf \
      >>  $LOG_DIR/telemetry-centralizer.stdout.log \
      2>> $LOG_DIR/telemetry-centralizer.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
